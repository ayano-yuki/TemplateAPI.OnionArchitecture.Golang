# ビルド用ステージ
FROM golang:1.21-alpine AS builder

WORKDIR /app
RUN apk add --no-cache git gcc musl-dev

# 依存解決
COPY go.mod go.sum ./
RUN go mod download

# ソースコードコピー
COPY . .

# ビルド
RUN go build -o main .

# 実行用ステージ
FROM alpine:3.18
RUN apk add --no-cache ca-certificates

WORKDIR /app
COPY --from=builder /app/main .

EXPOSE 8080
CMD ["./main"]
